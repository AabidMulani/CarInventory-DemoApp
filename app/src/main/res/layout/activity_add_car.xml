<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/MyTheme"
        app:titleTextAppearance="@color/action_bar_text">

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/action_bar_seperator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <in.abmulani.carinventory.widgets.CarInventoryEditText
            android:id="@+id/car_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Car Name"
            android:inputType="text"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:met_errorColor="@color/grey_heading"
            app:met_floatingLabel="normal"
            android:layout_marginTop="16dp"
            app:met_floatingLabelText="Car Name"
            app:met_primaryColor="@color/dark_grey"
            app:textStyle="@integer/FONT_LIGHT" />


        <in.abmulani.carinventory.widgets.CarInventoryEditText
            android:id="@+id/model_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Car Model"
            android:inputType="text"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:met_errorColor="@color/grey_heading"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Car Model"
            app:met_primaryColor="@color/dark_grey"
            app:textStyle="@integer/FONT_LIGHT" />

        <in.abmulani.carinventory.widgets.CarInventoryEditText
            android:id="@+id/color_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Model Color"
            android:inputType="text"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:met_errorColor="@color/grey_heading"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Model Color"
            app:met_primaryColor="@color/dark_grey"
            app:textStyle="@integer/FONT_LIGHT" />
        
        <in.abmulani.carinventory.widgets.CarInventoryButton
            android:id="@+id/proceed_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/terms_and_privacy_textView"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="16dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="18sp"/>


    </LinearLayout>
</LinearLayout>