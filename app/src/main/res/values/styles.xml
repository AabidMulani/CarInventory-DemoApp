<resources>


    <style name="SplashScreenTheme" parent="MyTheme">
        <item name="android:windowBackground">@color/dull_white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/action_bar_bg</item>
        <item name="colorPrimaryDark">@color/action_bar_text</item>
        <item name="colorAccent">@color/theme_dark</item>
        <item name="android:textColor">@color/action_bar_text</item>
        <item name="android:textSize">18sp</item>
        <item name="colorButtonNormal">@color/theme_dark</item>
    </style>

</resources>
